@*@Model*@ 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Students</title>
    <link href="~/Content/kendoUI/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoUI/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="~/Content/kendoUI/js/jquery.min.js"></script>
    <script src="~/Content/kendoUI/js/kendo.web.min.js"></script>
</head>
<body>
    <div id="grid"></div>

    <script>
        $(document).ready(function () {
            $.ajax({
                type: "get",
                url: "/Kendo/StudentsData",
                data: null,
                success: function (arr) {
                    //alert("Data Saved: " + msg);
                    if(arr.length)
                    {
                        alert(arr.length);
                        $("#grid").kendoGrid({
                            selectable: "multiple cell",
                            allowCopy: {
                                delimeter: ",",
                            },
                            columns: [
                                { field: "Name" },
                                { field: "Sex" },
                                { field: "Age" },
                                { field: "Address" },
                                { field: "Tel" }
                            ],
                            dataSource: arr
                        });
                    } else {
                        alert("none data..");
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("ajax error");
                }
            });
        });
    
    </script>
</body>
</html>
